.bottomBtnList {
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0px;
    display: flex;
    justify-content: center;
    /* box-shadow: 0px 0px 2rpx rgba(247, 248, 250, 1); */
}

.bottomBtnList>.button {
    width: 200rpx;
    height: 80rpx;
    text-align: center;
    color: rgba(52,62,223,1);
    border-radius: 44rpx;
    line-height: 80rpx;
    margin: 10rpx;
    border: 1rpx rgba(52,62,223,1) solid;
    transition: all 0.4s;
}

.bottomBtnList>.black {
    background-color: rgba(52,62,223,1);
    color: white;
}

.icon24rpx {
    width: 24rpx;
    height: 26rpx;
}

.bottomBtnList>.mid_Botton{
    width:280rpx;
}