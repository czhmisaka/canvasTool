/* pages/albumManage/newAlbum/index.wxss */

.wholeScreen {
    width: 100vw;
    height: 100vh;
    background-color: #F7F8FA;
    transition: all 0.5s;
}

.section {
    width: 100%;
    background-color: white;
    height: auto;
    display: inline-block;
    margin-bottom: 20rpx;
}

.iamgeBox {
    width: calc(100% - 4rpx);
    height: auto;
    margin: 0rpx auto;
    display: inline-block;
    max-height: 448rpx;
    min-height: 224rpx;
    overflow-y: auto;
}

.iamgeBox>.image {
    width: 160rpx;
    height: 160rpx;
    margin: 32rpx;
    float: left;
    border-radius: 8rpx;
}

.image>image {
    border-radius: 8rpx;
    width: 100%;
    height: 100%;
}

.image>.icon {
    position: relative;
    width: 32rpx;
    height: 32rpx;
    margin-left: 144rpx;
    margin-top: -186rpx;

}

.wordBox {
    width: 682rpx;
    height: 300rpx;
    margin: 0px auto;
    margin-bottom: 20rpx;
}

.wordBox>textarea {
    width: 100%;
    height: 100%;
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
    line-height: 40rpx;
}


.add {
    background-color: #E6E6E6;
    margin-bottom: 10rpx;
}

.add>image {
    width: 64rpx;
    height: 64rpx;
    margin: 48rpx;
}

.navToBox {
    width: 100%;
    height: 110rpx;
    background-color: white;
    line-height: 110rpx;
}

.navToBox>.left {
    margin-left: 34rpx;
    float: left;
    font-size: 32rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(61, 61, 61, 1);
}

.navToBox>.right {
    float: right;
    margin-right: 34rpx;
}

.navToBox>.icon {
    width: 14rpx;
    height: 26rpx;
}

.icon>image {
    width: 100%;
    height: 100%;
}

.bottomBtnList {
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0px;
    display: flex;
    justify-content: center;
}

.bottomBtnList>.button {
    width: 200rpx;
    height: 80rpx;
    text-align: center;
    color: #21373D;
    border-radius: 44rpx;
    line-height: 80rpx;
    margin: 10rpx;
    border: 1rpx #21373D solid;
}

.bottomBtnList>.longButton {
    width: 560rpx;
    height: 80rpx;
    background: rgba(33, 55, 61, 1);
    border-radius: 46rpx;
    text-align: center;
    line-height: 80rpx;
}

.bottomBtnList>.black {
    background-color: #21373D;
    color: white;
}