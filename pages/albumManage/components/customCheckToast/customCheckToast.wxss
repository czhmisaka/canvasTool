/* pages/albumManage/components/customCheckToast/customCheckToast.wxss */

.mainBox {
    position: fixed;
    width: 100vw;
    height: 100vh;
    background-color: rgba(0, 0, 0, 0.3);
    transition: all 0.2s;
    top: 0px;
    left: 0px;
    opacity: 0;
}

.mainBox_then {
    opacity: 1;
}

.touchBack {
    position: absolute;
    top: 0px;
    width: 100%;
    height: calc(100vh - 720rpx);
    z-index: 10;
}

.mainCheckBox {
    z-index: 100;
    width: 100%;
    height: 720rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 16px 16px 0px 0px;
    position: absolute;
    bottom: -720rpx;
}

.mainCheckBox_then {
    bottom: 0rpx;
}

.mainCheckBox>.title {
    height: 104rpx;
    width: 100%;
    display: flex;
    justify-content: space-around;
    border-bottom: 1rpx rgba(0, 0, 0, 0.1) solid;
}

.title>.btn {
    width: 2em;
    height: 28rpx;
    padding: 38rpx 34rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
}

.gray {
    color: #999;
}

.title>.word {
    width: 12em;
    height: 32rpx;
    padding: 36rpx 0rpx;
    text-align: center;
}

.tabBox {
    width: 100%;
    margin-top: 40rpx;
    height: calc(720rpx - 104rpx - 40rpx);
    display: flex;
    justify-content: flex-start;
    flex-wrap: nowrap;
}

.tabBox>.tab {
    margin: 0px 10rpx;
    height: 28rpx;
    padding: 14rpx 30rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(33, 55, 61, 1);
    line-height: 28rpx;
    border-radius: 28rpx;
    background: rgba(245, 245, 245, 1);
    border: 1rpx solid rgba(33, 55, 61, 0);
}

.tabBox>.highLight {
    border: 1rpx solid rgba(33, 55, 61, 1);
}

.tabBox>.add {
    padding: 16rpx 30rpx;
    height: 24rpx;
    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
    line-height: 24rpx;
    border-radius: 28rpx;
    border: 1rpx solid rgba(204, 204, 204, 1);
    background-color: white;
}