/* pages/albumManage/components/screenSliderBar/screenSliderBar.wxss */

.wholeScreen {
    width: 100vw;
    height: 100vh;
    position: fixed;
    z-index: 100;
    transition: all 0.3s;
}

.grayBg {
    background-color: rgba(0, 0, 0, 0.01);
    width: 100vw;
    height: 100vh;
    position: absolute;
    z-index: 10;
    top: 0px;
    left: 0px;
}

.sliderBar {
    position: absolute;
    right: 0px;
    top: 0px;
    width: 560rpx;
    height: calc(100vh);
    background-color: white;
    box-shadow: 0px 0px 10px rgba(0,0,0,0.1);
    z-index: 100;
    overflow-y: scroll;
    overflow-x: hidden;
    transition: all 0.3s ease-in-out;
}



.sliderBar>.title {
    width: 100%;
    height: 176rpx;
    position: relative;
    border-bottom: 1rpx #e6e6e6 solid;
    font-size: 32rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 900;
    color: rgba(33, 55, 61, 1);
    line-height: 270rpx;
    text-indent: 30rpx;
}

.sliderBar>.tabBox {
    width: 100%;
    height: auto;
    display: inline-block;
}

.tabBox>.title {
    width: 100%;
    margin: 32rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
    line-height: 28rpx;
}

.tabBox>.tabList {
    position: relative;
    width: calc(100% - 60rpx);
    margin: 0rpx 30rpx;
    height: auto;
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
}

.tabList>.tab {
    padding: 0rpx 0.75em;
    height: 56rpx;
    line-height: 56rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    margin-bottom: 20rpx;
    margin-right: 20rpx;
    background-color: rgba(245, 245, 245, 1);
    border-radius: 28rpx;
    color: #666;
    text-align: center;font-size: 26rpx;
    transition: all 0.3s;
}

.tabList>.highLight{
    background-color: #21373D;
    color: white;
}

.buttonBox{
    position: absolute;
    bottom: 0rpx;
    right: 0rpx;
    width: 560rpx;
    height: 100rpx;
    display: flex;
    justify-content: center;
    z-index: 100;
    background-color: white;
    transition: all 0.3s ease-in-out;
}   

.buttonBox>.button{
    width:200rpx;
    height: 80rpx;
    margin: 10rpx;
    border-radius: 40rpx;
    border: 1rpx #21373d solid;
    line-height: 80rpx;
    text-align: center;
}
.buttonBox>.highLight{
    background-color: #21373d;
    color: white;
}
.hide{
    right:-560rpx;
}