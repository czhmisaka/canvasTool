/* pages/home/index.wxss */

page {
    width: 100vw;
    overflow-y: scroll;
    overflow-x: hidden;
}

.home {
    background-color: #F7F8FA;
    min-height: 100vh;
    font-family: "PingFangSC-Regular,PingFang SC";
    width: 100vw;
    overflow-y: scroll;
    overflow-x: hidden;
}

.promoter {
    width: 100%;
    height: 244rpx;
    color: white;
}

.promoter>.detail {
    z-index: 10;
    position: relative;
}

.detail>.change {
    position: absolute;
    margin: 34rpx;
    right: 0px;
    top: 0px;
    width: auto;
    height: 28rpx;
    line-height: 28rpx;
    font-size: 28rpx;
}

.detail>.change>.span {
    line-height: 30rpx;
    float: right;
}

.detail>.change>image {
    width: 28rpx;
    height: 28rpx;
    margin-right: 10rpx;
}

.detail>.headImg {
    margin: 32rpx;
    margin-top: 0px;
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    overflow: hidden;
    border: 2px solid rgba(255, 255, 255, 1);
    float: left;
}

.detail>.box {
    margin: 10rpx auto;
    margin-top: 0px;
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    overflow: hidden;
}

.headImg>image {
    width: 124rpx;
    height: 124rpx;
    margin-left: -2rpx;
    margin-top: -2rpx;
}

.detail>.word {
    width: 12em;
    margin: 42rpx 0px;
    text-align: left;
    height: 40rpx;
    float: left;
    line-height: 40rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.detail .button {
    width: 164rpx;
    height: 40rpx;
    border-radius: 40rpx;
    line-height: 40rpx;
    text-align: center;
    font-size: 24rpx;
    border: 1rpx white solid;
    margin: 0px auto;
    margin-top: 20rpx;
}

.promoter>.background {
    z-index: 1;
    position: absolute;
    top: 0px;
    left: 0px;
    width: 100vw;
    height: 500rpx;
    overflow: hidden;
}

.background>.cycle {
    position: absolute;
    width: 200vh;
    height: 200vh;
    border-radius: 50%;
    left: 50%;
    margin-left: -100vh;
    margin-top: calc(475rpx - 200vh);
    background-color: rgba(52, 62, 223, 1);

}

.background>image {
    width: 750rpx;
    height: 360rpx;
}

.flexBox {
    z-index: 10;
    background-color: #fff;
    width: calc(100% - 40rpx);
    margin: 20rpx;
    height: auto;
    border-radius: 16rpx;
    position: relative;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.flexBox>.MsgBox {
    margin: 32rpx 0px;
    width: calc(33% - 40rpx);
    text-align: center;
    flex-grow: 1;
    order: 10;
}

.flexBox>.borderleft {
    border-left: 0.5rpx #e6e6e6 solid;
}

.flexBox>.title {
    width: 100%;
    flex-grow: 4;
    padding: 32rpx;
    padding-bottom: 0rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(61, 61, 61, 1);
    height: 28rpx;
    line-height: 28rpx;
}

.title>.left {
    float: left;
    width: auto;
    display: inline-block;
}

.title>.right {
    float: right;
}

.MsgBox>.Number {
    font-family: "DINAlternate-Bold,DINAlternate";
    color: #3d3d3d;
    font-weight: bold;
    font-size: 36rpx;
}

.MsgBox>.word {
    padding-top: 16rpx;
    color: #999999;
    font-size: 24rpx;
}

.flexBox>.toPhoto {
    display: flex;
    font-weight: 400;
    font-family: "PingFangSC-Regular,PingFang SC";
    line-height: 110rpx;
}

.flexBox>.right {
    line-height: 110rpx;
    margin-right: 35rpx;
    transform: scale(1.5ï¼Œ1)
}

.LongButton {
    margin: 0rpx auto;
    width: 640rpx;
    height: 88rpx;
    background: rgba(52, 62, 223, 1);
    border-radius: 46rpx;
    font-size: 32rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    line-height: 88rpx;
    letter-spacing: 2px;
    text-align: center;
}

.divideLine {
    width: 100%;
    height: 24rpx;
    margin: 24rpx 0px;
    line-height: 24rpx;
    text-align: center;
    background-position: center;
    font-weight: 400;
    background-repeat: no-repeat;
    font-size: 24rpx;
    background-size: 344rpx 13rpx;
    color: rgba(52, 62, 223, 1);
}

.divideLine>.bgImage>image {
    width: 344rpx;
    height: 12rpx;
    position: absolute;
    margin-left: -172rpx;
    margin-top: 6rpx;
    left: 50%;
}

.divideLine>.bgImage {
    color: #FF8D4D;
}

.icon40 {
    width: 40rpx;
    height: 40rpx;
    margin: 36rpx;
    margin-right: 10rpx;
}

.iconGo {
    width: 32rpx;
    height: 32rpx;
}

.icon_32To28{
    margin-top: -2rpx;
}

.iconGo>image {
    width: 100%;
    height: 100%;
}