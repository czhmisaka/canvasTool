/* pages/login/index.wxss */
view,
button {
    transition: all 0.4s ease-in-out;
}

view {
    color: #21373D;
    font-size: 32rpx;
    font-weight: 400;
}

.back {
    position: fixed;
    left: 50rpx;
    /* top: 65rpx; */
    transform: rotateX('180deg');
    width: auto;
    height: 32rpx;
    line-height: 32rpx;
}

.back>.word {
    float: left;
    text-indent: 1em;
    color: #999;
}

.back>image {
    width: 32rpx;
    height: 32rpx;
    float: left;
}

.icon>image {
    width: 100%;
    height: 100%;
}

.checkBox>.icon>image {
    border: 1rpx #21373D solid;
    border-radius: 12rpx;
}

.checkBox>.icon {
    width: 24rpx;
    height: 24rpx;
    margin: 5rpx;
}


.logoImage {
    margin: 262rpx 215rpx;
    margin-bottom: 80rpx;
    width: 320rpx;
    height: 320rpx;
}

.logSizeSmall {
    width: 200rpx;
    height: 200rpx;
    margin: 240rpx 275rpx;
    margin-bottom: 80rpx;
}

.logoImage>image {
    width: 100%;
    height: 100%;
}

.buttonBox {
    margin: 40rpx 95rpx;
    width: 560rpx;
    height: 92rpx;
    border-radius: 46rpx;
    border: 1px #21373D solid;
    display: flex;
    justify-content: center;
    line-height: 92rpx;
    background-color: rgba(0, 0, 0, 0);
}

.grayButton {
    border: 1px #d9d9d9 solid;
    /* box-shadow:inset 0px 0px 10000rpx #d9d9d9 ; */
}

.grayButton>view {
    color: #d9d9d9;
}

.buttonBox>.icon {
    margin: 4rpx 10rpx;
}

.checkBox {
    margin: 40rpx 95rpx;
    width: 560rpx;
    display: flex;
    justify-content: center;
}

.checkBox>.icon {
    line-height: 24rpx;
}

checkbox .wx-checkbox-input {
    border: 2rpx #21373D solid;
    border-radius: 4rpx;
    width: 24rpx;
    height: 24rpx;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
    background: #21373D;
    color: #fff;
    border: 2rpx #21373D solid;
}

.checkBox>.word {
    color: #666;
    font-size: 24rpx;
}

.checkBox>.word>.span {
    color: #21373D;
}

.inputBox {
    display: flex;
    justify-content: space-between;
    width: 560rpx;
    height: 88rpx;
    margin: 41rpx 95rpx;
    margin-top: 23rpx;
    border-bottom: 1rpx #ccc solid;
}

.inputBox>input {
    height: 88rpx;
    width: 100%;
    line-height: 88rpx;
    color: #3D3D3D;
    font-weight: 400;
}

.inputBox>.button {
    width: 222rpx;
    height: 56rpx;
    line-height: 56rpx;
    border-radius: 28rpx;
    color: #21373D;
    border: 1rpx #21373D solid;
    font-size: 24rpx;
    text-align: center;
    margin-top: 18rpx;
}

.inputBox>.grayBg {
    background-color: #A6AFB1;
    color: white;
    border: none;
}

.mainColorBg {
    background-color: #21373D;
    color: white;
}

.show {
    opacity: 1;
}

.hidden {
    opacity: 0;
}