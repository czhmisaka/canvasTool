.title {
    height: 104rpx;
    width: 100%;
    display: flex;
    justify-content: space-around;
    border-bottom: 1rpx rgba(0, 0, 0, 0.1) solid;
}

.title>.btn {
    width: 2em;
    height: 28rpx;
    padding: 38rpx 34rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
}

.section>.btn {}

.gray {
    color: #999;
}

.title>.word {
    width: 12em;
    height: 32rpx;
    padding: 36rpx 0rpx;
    text-align: center;
}

.tabBox {
    width: calc(100% - 34rpx);
    margin-left: 34rpx;
    margin-top: 40rpx;
    max-height: calc(720rpx - 104rpx - 40rpx);
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
}

.tabBox>.tab {
    margin: 10rpx;
    height: 28rpx;
    padding: 14rpx 30rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(52, 62, 223, 1);
    line-height: 28rpx;
    border-radius: 28rpx;
    background: rgba(245, 245, 245, 1);
    border: 1rpx solid rgba(33, 55, 61, 0);
    transition: all 0.3s;
}

.tabBox>.highLight {
    border: 1rpx solid rgba(52, 62, 223, 1);
    color: white;
    background-color: rgba(52, 62, 223, 1);
}

.tabBox>.add {
    padding: 7rpx 30rpx;
    width: 4em;
    display: inline-block;
    height: 24rpx;
    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
    line-height: 24rpx;
    border-radius: 28rpx;
    border: 1rpx solid rgba(204, 204, 204, 1);
    background-color: white;
}

.wholeScreen {
    position: fixed;
    width: 100vw;
    height: calc(100vh - 100rpx);
    z-index: 10000000;
    top: 100px;
    left: 0px;
    background-color: white;
    transition: all 0.3s;
    transform: translateY(100vh);
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
    opacity: 0;
    /* display: none; */
}

.scrollView {
    overflow-y: scroll;
    height: calc(100vh - 205rpx);
}

.showWholeScreen {
    transform: translateY(0);
    opacity: 1;
}

.section {
    position: relative;
    line-height: 88rpx;
    top: 0rpx;
    left: 0rpx;
    display: flex;
    justify-content: space-between;
    width: 600rpx;
    height: 88rpx;
    background: #FAFAFA;
    border-radius: 16px;
    margin: 40rpx;
    margin-bottom: 0rpx;
}

.section>.left {
    float: left;
    height: 80rpx;
    margin-left: 24rpx;
}

.section>.right {
    float: right;
    height: 80rpx;
    margin-right: 24rpx;
    font-size: 32rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #999999;
}

.section>.icon14 {
    width: 14rpx;
    height: 26rpx;
}

.right>input {
    height: 88rpx;
    line-height: 88rpx;
    text-align: left;
    margin-left: 24rpx;
}

.section>.icon32 {
    width: 32rpx;
    height: 32rpx;
}

.section>.icon48 {
    width: 48rpx;
