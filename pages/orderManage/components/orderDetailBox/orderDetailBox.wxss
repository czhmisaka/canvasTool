/* pages/orderManage/components/orderDetailBox/orderDetailBox.wxss */

.order {
    width: 710rpx;
    margin: 20rpx;
    height: 228rpx;
    background-color: white;
    border-radius: 8rpx;
}

.left {
    float: left;
    width: auto;
    height: 228rpx;
    display: inline-block;
}

.left>image {
    width: 180rpx;
    height: 180rpx;
    margin: 24rpx;
    border-radius: 8rpx;
}

.width228rpx {
    width: calc(710rpx - 228rpx);
}

.left>.title {
    width: 100%;
    height: 32rpx;
    font-size: 32rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(61, 61, 61, 1);
    line-height: 32rpx;
    margin-top: 24rpx;
}

.left>.time {
    margin-top: 16rpx;
    height: 24rpx;
    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
    line-height: 24rpx;
}

.left>.bottom {
    position: relative;
    width: calc(710rpx - 228rpx);
    top: calc(228rpx - 140rpx);
    font-size: 28rpx;
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    line-height: 28rpx;
    height: 28rpx;
}

.bottom>.left {
    height: 100%;
    color: rgba(238, 72, 102, 1);
}

.bottom>.right {
    height: 28rpx;
    float: right;
    margin-right: 24rpx;
}

.right{
    color: rgba(102, 102, 102, 1);
}

.black {
    color: rgba(33, 55, 61, 1);
}

.gray {
    color: rgba(153, 153, 153, 1);
}

.red {
    color: rgba(253, 60, 49, 1);
}
