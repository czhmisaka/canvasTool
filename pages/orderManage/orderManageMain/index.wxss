/* pages/orderManage/orderManageMain/index.wxss */

.wholeScreen {
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0px;
    left: 0px;
    margin: 0px;
    border: 0px;
    padding: 0px;
}

.search {
    width: 100%;
    height: 74rpx;
}

.search>input {
    width: 682rpx;
    height: 34rpx;
    margin: 20rpx auto;
    border-radius: 28rpx;
    line-height: 56rpx;
    text-align: center;
    background-color: #F0F0F0;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
}

.subTitle {
    background-color: white;
    display: flex;
    justify-content: space-between;
    width: calc(100% - 68rpx);
    margin: 0px 34rpx;
    height: 102rpx;
}

.subTitle>.type {
    height: 102rpx;
    font-weight: 400;
    color: rgba(102, 102, 102, 1);
    line-height: 102rpx;
    margin: 0px 10rpx;
    text-align: left;
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    z-index: 10;
}

.subTitle>.highLight {
    color: #21373D;
    font-weight: bolder;
}

.subTitle>.moveBottombar {
    position: absolute;
    border-bottom: 4rpx #21373D solid;
    z-index: 1;
    transition: all 0.4s;
    height: 82rpx;
}

.orderBox {
    width: 100%;
    height: calc(100vh - 196rpx);
    background: rgba(247, 248, 250, 1);
}

.swiper {
    width: 100%;
    height: 100%;
}

.scroll {
    width: 100%;
    height: calc(100vh - 196rpx);
}

.noOrder {
    line-height: 500rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(204, 204, 204, 1);
    background: rgba(247, 248, 250, 1);
    text-align: center;
    width: 100%;
}