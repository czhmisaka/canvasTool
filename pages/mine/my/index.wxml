<view class="wholeScreen {{pageType!='验证手机号'?'hide':''}}">
    <view class="cardBox">
        <view class="word">验证当前手机号：{{userData.phone}}</view>
        <view class="input">
            <input type="number" class="left" bindinput="bindInput" placeholder="请输入验证码" data-key="code" value="{{code}}" />
            <view class="right button_small" bindtap="getCheckCode" data-phone="{{userData.phone}}" >{{getCodeStatus?time+'s后尝试':'获取验证码'}}</view>
        </view>
        <view class="button longBotton" bindtap='changeStatus' data-pageType="验证新手机号">
            下一步
        </view>
    </view>
</view>

<view class="wholeScreen {{pageType!='绑定新手机号'?'hide':''}}">
    <view class="cardBox">
        <view class="word">绑定新手机号</view>
        <view class="input">
            <input type="text" class="left" bindinput="bindInputPhone" placeholder="请输入新手机号" data-key="phone" value="{{phone}}" />
        </view>
        <view class="input">
            <input type="text" class="left" bindinput="bindInput" placeholder="请输入验证码" data-key="code" value="{{code}}" />
            <view class="right button_small" bindtap="getCheckCode" data-phone="{{phone}}" >{{getCodeStatus?time+'s后尝试':'获取验证码'}}</view>
        </view>
        <button class="button longBotton" bindtap='changeStatus' data-pageType="确定">
            确定
        </button>
    </view>
</view>