/* pages/dataCenter/goodsData/index.wxss */

.wholeScreen {
  width: 100vw;
  height: auto;
  background: rgba(247, 248, 250, 1);
  padding-top: 20rpx;
  display: inline-block;
  min-height: 100vh;
}

.timeCheckBox {
  z-index: 10;
  width: calc(100% - 40rpx);
  margin: 20rpx;
  height: auto;
  border-radius: 16rpx;
  position: relative;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}

.timeCheckBox>.item {
  width: 120rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 24rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  line-height: 48rpx;
  text-align: center;
  color: rgba(102, 102, 102, 1);
  margin: 0rpx 10rpx;
  transition: all 0.3s;
}

.timeCheckBox>.highLight {
  color: rgba(255, 255, 255, 1);
  background: rgba(52, 62, 223, 1);
}

.flexBox {
  z-index: 10;
  background-color: #fff;
  width: calc(100% - 40rpx);
  margin: 20rpx;
  height: auto;
  border-radius: 16rpx;
  position: relative;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.flexBox>.MsgBox {
  margin: 32rpx 0px;
  width: calc(33% - 40rpx);
  text-align: center;
  flex-grow: 1;
  order: 10;
}

.flexBox>.borderleft {
  border-left: 0.5rpx #e6e6e6 solid;
}

.flexBox>.chart {
  width: calc(100% - 40rpx);
  margin: 0rpx 20rpx;
  height: 300rpx;
}

.flexBox>.title {
  width: 100%;
  flex-grow: 4;
  padding: 24rpx;
  padding-bottom: 0rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 600;
  color: rgba(61, 61, 61, 1);
  height: 32rpx;
  line-height: 32rpx;
}

.title>.left {
  float: left;
  width: auto;
  display: inline-block;
}

.title>.right {
  float: right;
}

.MsgBox>.Number {
  font-family: "DINAlternate-Bold,DINAlternate";
  color: #3d3d3d;
  font-weight: bold;
  font-size: 36rpx;
}

.MsgBox>.word {
  padding-top: 16rpx;
  color: #999999;
  font-size: 24rpx;
}

.flexBox>.toPhoto {
  display: flex;
  font-weight: 400;
  font-family: "PingFangSC-Regular,PingFang SC";
  line-height: 110rpx;
}

.flexBox>.right {
  line-height: 110rpx;
  margin-right: 35rpx;
  transform: scale(1.5ï¼Œ1)
}

.flexBox>.tabBar{
  width: 100%;
  
}

.flexBox>.topList {
  width: calc(100% - 48rpx);
  margin: 18rpx 24rpx;
  height: auto;
  display: inline-block;
}

.topList>.listItem {
  width: 100%;
  height: 116rpx;
  line-height: 116rpx;
}

.listItem>.left {
  float: left;
  width: auto;
  height: 116rpx;
  display: inline-block;
}

.listItem>.contentLeft {
  float: left;
  width: auto;
  height: 116rpx;
  display: inline-block;
  margin-left: 20rpx;
}

.contentLeft>.headImg {
  width: 80rpx;
  height: 80rpx;
  margin: 18rpx 0rpx;
  border-radius: 40rpx;
  overflow: hidden;
}

.contentLeft>.name {
  margin-top: 24rpx;
  width: auto;
  height: 32rpx;
  line-height: 32rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(61, 61, 61, 1);
}

.contentLeft>.content {
  margin-top: 16rpx;
  height: 24rpx;
  width: auto;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 100;
  color: rgba(153, 153, 153, 1);
  line-height: 24rpx;
}

.headImg>image {
  width: 100%;
  height: 100%;
}

.listItem .num_icon {
  margin: 30rpx 0rpx;
  width: 56rpx;
  height: 56rpx;
  border-radius: 16rpx;
  line-height: 56rpx;
  text-align: center;
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: bolder;
}

.listItem .blueBg {
  background: rgba(228, 230, 255, 1);
  color: rgba(52, 62, 223, 1);
}

.listItem .orangeBg {
  background: rgba(255, 243, 237, 1);
  color: rgba(255, 141, 77, 1);
}

.content>.word {
  margin-right: 1em;
}

.gray {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 100;
  color: rgba(61, 61, 61, 1);
}

.f2-chart {
  width: 100%;
  height: 500rpx;
}