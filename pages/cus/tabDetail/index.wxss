.page {
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0px;
    left: 0px;
    /* background: rgba(247, 248, 250, 1); */
    background: rgba(0, 0, 0, 0.3)
}

.box {
    width: 680rpx;
    height: 420rpx;
    background: #FFFFFF;
    border-radius: 16rpx;
    margin: -210rpx -340rpx;
    top: 50%;
    left: 50%;
    position: absolute;
    /* display: flex;
    justify-content: center;
    flex-flow: column */
}

.section {
    width: 100%;
    margin:20rpx 0;
    height: 88rpx;
    line-height: 88rpx;
    background-color: white;
    border-radius: 8rpx;
    text-align: center;
}

.title {
    font-size: 36rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: bolder;
    color: #3D3D3D;
}

.input {
    width: 600rpx;
    height: 88rpx;
    background: #FAFAFA;
    margin: 0rpx auto;
    border-radius: 16rpx;
    line-height: 88rpx;
    font-size: 28rpx;
    text-align: center;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
}

.button {
    position: relative;
    width: 506rpx;
    left: 50%;
    margin-left: -253rpx;
    height: 88rpx;
    background: rgba(52, 62, 223, 1);
    border-radius: 44rpx;
    font-size: 32rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    line-height: 88rpx;
    letter-spacing: 2rpx;
    text-align: center;
}