/* pages/order/index.wxss */


.search {
    width: 100%;
    height: 74rpx;
}

.search>input {
    width: 682rpx;
    height: 34rpx;
    margin: 20rpx auto;
    border-radius: 28rpx;
    line-height: 56rpx;
    text-align: center;
    background-color: #F0F0F0;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
}

.subTitle {
    background-color: white;
    display: flex;
    justify-content: space-between;
    width: calc(100% - 68rpx);
    margin: 0px 34rpx;
    height: 102rpx;
}

.subTitle>.type {
    height: 102rpx;
    font-weight: 400;
    color: rgba(102, 102, 102, 1);
    line-height: 102rpx;
    margin: 0px 20rpx;
    text-align: left;
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    z-index: 10;
}

.subTitle>.highLight {
    color: #21373D;
}

.subTitle>.moveBottombar {
    position: absolute;
    border-bottom: 4rpx #21373D solid;
    z-index:1;
    transition:all 0.4s;
    height: 82rpx;
}

.orderBox {
    width: 100%;
    height:calc(100vh - 196rpx);
}
.swiper{
    width:100%;
    height:calc(100vh - 196rpx);
}