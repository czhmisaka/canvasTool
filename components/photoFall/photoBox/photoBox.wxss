/* components/photoFall/photoBox/photoBox.wxss */
.photo {
    width: 100%;
    height: auto;
    /* display: inline-block; */
    border-radius: 8rpx;
    background-color: white;
    margin: 10rpx 0px;
    overflow: hidden;
}

.imageBox {
    width: 100%;
}

image {
    width: 100%;
    height: auto;
}

.imageBox>.info {
    position: absolute;
    right: 20rpx;
    margin-top: -30rpx;
}

.imageBox>.info>.icon {
    width: 32rpx;
    height: 32rpx;
    margin-top: -32rpx;
}