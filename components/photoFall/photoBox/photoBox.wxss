/* components/photoFall/photoBox/photoBox.wxss */
.photo {
    transition: all 0.4s;
    width: 100%;
    height: auto;
    /* display: inline-block; */
    border-radius: 8rpx;
    background-color: white;
    margin-bottom: 10rpx;
    overflow: hidden;
    transition: all 0.4s;
}

.loading {
    width: 100%;
    height: 100%;
    line-height: 100%;
    text-align: center;
    color: white;
    font-weight: 400;
}

.gray {
    background-color: rgba(0, 0, 0, 0.3);
}

.show {
    opacity: 1;
}

.hidden {
    opacity: 0;
    /* height: 0px;
    margin: 0px; */
}

.widthFix {
    width: 100%
}

.imageBox {
    width: 100%;
}

.imageBox>.image {
    width: 100%;
    height: auto;
}

.imageBox>.info {
    position: absolute;
    margin-top: -30rpx;
    width: 40rpx;
    height: 40rpx;
    margin-left: calc(50% - 85rpx);

}

.imageBox>.info>.icon {
    width: 32rpx;
    height: 32rpx;
    margin-top: -32rpx;
}

.imageBox>.info>.word {
    height: 32rpx;
    line-height: 32rpx;
    font-size: 20rpx;
    color: white;
    background-color: rgba(0, 0, 0, 0.3);
    padding: 0rpx 0rpx;
    width: 150%;
    text-align: center;
    border-radius: 16rpx;
    display: inline-block;
    position: absolute;
    margin-left: -40%;
    margin-top: calc(-100% + 20rpx);
}

.bottom {
    height: auto;
    display: inline-block;
    width: 100%;
}

.bottom>.name {
    float: left;
    margin: 20rpx 16rpx;
    color: #3D3D3D;
    font-size: 28rpx;
    font-weight: 500;
    font-family: PingFangSC-Regular, PingFang SC;
    color: rgba(61, 61, 61, 1);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 300rpx;

}

.bottom>.price {
    float: left;
    margin: 20rpx 22rpx;
    color: #EE4866;
    font-size: 28px;
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    line-height: 28rpx;
}

.bottom>.button {
    float: right;
    width: 120rpx;
    height: 40rpx;
    border-radius: 20rpx;
    border: 1rpx solid rgba(61, 61, 61, 1);
    margin: 20rpx 16rpx;
    font-size: 22rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(61, 61, 61, 1);
    line-height: 40rpx;
    text-align: center;
}

.bottom>.status {
    float: right;
    margin: 24rpx 20rpx;
    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(204, 204, 204, 1);
    line-height: 24rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
}